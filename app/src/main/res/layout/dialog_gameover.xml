<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical"
    android:weightSum="10">


    <RelativeLayout
        android:id="@+id/dialoggameover_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/gameover">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.fli_alpha_solutions_ltd.word_unlimited.view.MyTextView
                    android:id="@+id/dialoggameoverscore_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Score:"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <com.fli_alpha_solutions_ltd.word_unlimited.view.MyTextView
                    android:id="@+id/dialoggameover_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialoggameoverscore_title"
                    android:layout_centerHorizontal="true"
                    android:text="10s"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/dialoggameoverbtn_playagain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialoggameover_score"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="PLAY"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.fli_alpha_solutions_ltd.word_unlimited.view.MyTextView
                    android:id="@+id/dialoggameover_bestscore_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Best Score:"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <com.fli_alpha_solutions_ltd.word_unlimited.view.MyTextView
                    android:id="@+id/dialoggameover_bestscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialoggameover_bestscore_title"
                    android:layout_centerHorizontal="true"
                    android:text="10s"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/dialoggameover_btn_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialoggameover_bestscore"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="MENU"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialoggameover_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialoggameover_facebook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/dialoggameover_buy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/buy" />

        <ImageView
            android:id="@+id/dialoggameover_twitter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/twitter" />

    </LinearLayout>


</RelativeLayout>